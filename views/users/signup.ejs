<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp for Wanderlust</h1>
        <div class="col-8  offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                    type="text"
                    name="username" 
                    id="username"
                    placeholder="Enter username" 
                    class="form-control"
                    required>
                    <div class="valid-feedback">username looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input 
                    type="email"
                    name="email" 
                    id="email"
                    placeholder="Enter your E-mail" 
                    class="form-control"
                    required>
                    <div class="invalid-feedback">Please enter a valid E-mail</div>
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                    type="password"
                    name="password" 
                    id="password"
                    placeholder="Enter Password" 
                    class="form-control"
                    required>
                    <div class="valid-feedback">Password looks good!</div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>

